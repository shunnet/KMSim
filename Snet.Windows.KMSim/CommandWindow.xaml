<snet:WindowBase
    x:Class="Snet.Windows.KMSim.CommandWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:Snet.Windows.KMSim"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:snet="https://shunnet.top"
    xmlns:ui="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:uis="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="{snet:Loc 命令查找窗口}"
    Width="700"
    Height="450"
    snet:ResxLocalizationProvider.DefaultAssembly="Snet.Windows.KMSim"
    snet:ResxLocalizationProvider.DefaultDictionary="Language"
    Icon="/Icon.ico"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <uis:AutoSuggestBox
            Margin="16,16,16,0"
            ClearButtonEnabled="true"
            Icon="{uis:SymbolIcon Search24}"
            OriginalItemsSource="{Binding ViewModel.AutoSuggestBoxSuggestions, Mode=OneWay}"
            PlaceholderText="查找" />


        <Grid Grid.Row="1" Margin="16,6,16,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>


            <GroupBox
                Margin="0,0,3,0"
                Padding="3"
                ui:ElevationAssist.Elevation="Dp2"
                ui:GroupBoxAssist.HeaderPadding="7"
                Header="{Binding}"
                Style="{StaticResource MaterialDesignCardGroupBox}">
                <GroupBox.HeaderTemplate>
                    <DataTemplate>
                        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>
                            <ui:PackIcon Grid.Column="0" Kind="Tools" />
                            <TextBlock
                                Grid.Column="1"
                                Margin="5,0,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="方法"
                                TextAlignment="Center" />
                        </Grid>
                    </DataTemplate>
                </GroupBox.HeaderTemplate>

                <uis:ListView>
                    <uis:ListView.Resources>
                        <Style BasedOn="{StaticResource UiScrollBar}" TargetType="ScrollBar" />
                    </uis:ListView.Resources>
                    <uis:ListViewItem Content="Hello" />
                    <uis:ListViewItem Content="World" />
                    <uis:ListViewItem Content=":)" />
                    <uis:ListViewItem Content="Hello" />
                    <uis:ListViewItem Content="World" />
                    <uis:ListViewItem Content=":)" />
                    <uis:ListViewItem Content="Hello" />
                    <uis:ListViewItem Content="World" />
                    <uis:ListViewItem Content=":)" />
                    <uis:ListViewItem Content="Hello" />
                    <uis:ListViewItem Content="World" />
                    <uis:ListViewItem Content=":)" />
                    <uis:ListViewItem Content="Hello" />
                    <uis:ListViewItem Content="World" />
                    <uis:ListViewItem Content=":)" />
                    <uis:ListViewItem Content="Hello" />
                    <uis:ListViewItem Content="World" />
                    <uis:ListViewItem Content=":)" />
                </uis:ListView>

            </GroupBox>


            <GroupBox
                Grid.Column="1"
                Margin="3,0,0,0"
                Padding="6"
                ui:ElevationAssist.Elevation="Dp2"
                ui:GroupBoxAssist.HeaderPadding="7"
                Header="{Binding}"
                Style="{StaticResource MaterialDesignCardGroupBox}">
                <GroupBox.HeaderTemplate>
                    <DataTemplate>
                        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>
                            <ui:PackIcon Grid.Column="0" Kind="Design" />
                            <TextBlock
                                Grid.Column="1"
                                Margin="5,0,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="描述"
                                TextAlignment="Center" />
                        </Grid>
                    </DataTemplate>
                </GroupBox.HeaderTemplate>
            </GroupBox>

        </Grid>


    </Grid>



</snet:WindowBase>
